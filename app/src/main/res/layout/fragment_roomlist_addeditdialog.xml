<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/container_corners"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_roomlist_editdialog_title"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/fragment_roomlist_editdialog_name"
        android:maxLines="1"
        android:lines="1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:hint="Room Name"
        android:textColorHint="@color/grayTextColor"
        android:importantForAutofill="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fragment_roomlist_editdialog_save"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Save"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/fragment_roomlist_editdialog_delete"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Delete"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/fragment_roomlist_editdialog_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Cancel"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>