<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/container_corners"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_chorelist_edit_text"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_chorelist_editname_text"
            android:layout_gravity="start"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/fragment_chorelist_editname_field"
            android:maxLines="1"
            android:lines="1"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:inputType="text"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:hint="Chore Name"
            android:textColorHint="@color/grayTextColor"
            android:importantForAutofill="no"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_chorelist_yes"
            android:layout_gravity="end"
            android:layout_marginEnd="64dp"
            android:textSize="16sp"
            android:textColor="@color/blueTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fragment_chorelist_no"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textColor="@color/blueTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>