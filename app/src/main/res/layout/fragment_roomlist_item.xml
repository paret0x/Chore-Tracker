<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_roomlist_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:background="@drawable/container_corners"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_roomlist_item_text"
        android:layout_gravity="start"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/fragment_roomlist_item_edit"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:src="?attr/actionEditIcon" />

</FrameLayout>