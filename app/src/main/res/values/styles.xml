<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/actionBarBackgroundColor</item>

        <item name="actionAddIcon">@drawable/icon_add</item>
        <item name="actionEditIcon">@drawable/icon_edit</item>
        <item name="actionCompleteIcon">@drawable/icon_check</item>
        <item name="actionSettingsIcon">@drawable/icon_settings</item>
        <item name="actionReturnIcon">@drawable/icon_return</item>
        <item name="actionSaveIcon">@drawable/icon_save</item>
        <item name="actionDeleteIcon">@drawable/icon_delete</item>
        <item name="actionCalendarIcon">@drawable/icon_calendar</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>